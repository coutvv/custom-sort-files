<idea-plugin>
    <id>com.lomovtsev.custom-sort-files</id>
    <name>Custom Sort Files</name>

    <vendor email="coutvv@gmail.com" url="https://www.lomovtsev.com">lomovtsev.com</vendor>
    
    <description><![CDATA[
    Plugin for setup custom order in the Project Files window
  ]]></description>
    
    <depends>com.intellij.modules.platform</depends>
    
    <extensions defaultExtensionNs="com.intellij">
        <treeStructureProvider 
                implementation="com.lomovtsev.customsortfiles.ZFirstTreeStructureProvider"/>
        
        <projectViewPane implementation="com.lomovtsev.customsortfiles.ZFirstProjectViewPane"/>
    </extensions>
    <actions>
        <action id="ForceZFirstAction" class="com.lomovtsev.customsortfiles.ForceZFirstAction" 
                text="Force ZFirst Sort" 
                description="Apply custom sorting">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
